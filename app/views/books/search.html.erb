<h1>Search</h1>

<%= form_tag books_search_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  </p>
<% end %>


<%= link_to "New book", new_book_path %>

<table>
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Description</th>
		<th>Price</th>
		<th>Author</th>
	</tr>

	<% @books.each do |book| %>
	<tr>
		<td><%= book.id %></td>
		<td><%= book.title %></td>
		<td><%= book.description %></td>
		<td><%= book.price %></td>
		<td><%= book.author.name %></td>
		<td>
			<%= link_to "View", book_path(book), :class => "some_link", id: "some_id" %>
			<%= link_to "Edit", edit_book_path(book) %>
			<%= link_to "Delete", book_path(book),
									method: :delete,
									data: {confirm: "Do you want to remove this book?"} %>
		</td>
	</tr>
	<% end %>
</table>

