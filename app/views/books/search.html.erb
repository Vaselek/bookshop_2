<h1>Search</h1>

<%= form_tag books_search_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  </p>
<% end %>

<table>
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Description</th>
		<th>Author</th>
	</tr>

  <% counter = 1 %>

	<% @books.each do |book| %>
	<tr>
		<td><%= counter %></td>
    <% counter += 1 %>
		<td><%= book.title %></td>
		<td><%= book.description %></td>
		<td>
      <% book.authors.each do |author| %>
        <%= author.name %>
      <% end %>
    </td>
	</tr>
	<% end %>
</table>

