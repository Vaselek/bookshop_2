<h1>Все книги</h1>
<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<br>

<%= form_tag books_search_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  </p>
<% end %>

<div class="container">

  <div class="row">
  <% @books.each do |book| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= image_tag book.file_url(:thumb) %>
        <div class="caption">
          <h3 class="block"><%= book.title %></h3>
          </p>
          <p><%= link_to 'Далее..', book_path(book), class: "btn btn-primary" %></p>
        </div>
      </div>
    </div> 
  <% end %>
  </div>
  
</div>