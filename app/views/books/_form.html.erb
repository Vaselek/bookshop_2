<%= form_for @book do |f| %>

    <% if @book.errors.any? %>
        <div class="errors">
          Total errors: <%= @book.errors.count %>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <%= f.label "Название" %><br />
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label "Описание" %><br />
      <%= f.text_area :description %>
    </div>

    <div>
      <%= f.label "Рисунок" %><br/>
      <%= f.file_field :picture %>
    </div>

    <div>
      <%= f.label "Автор" %><br/>
      <%= f.collection_select :author_ids, Author.all, :id, :name %>
    </div>

    <div>
      <%= f.label "Категория" %><br/>
      <%= f.collection_select :category_ids, Category.all, :id, :title %>
    </div>

    <br/>

    <div>
      <%= f.submit "Сохранить" %>
    </div>
<% end %>